{
  "root": "build/",
  "routes": {
    "/**": "index.html"
  },
  "proxies": {
    "/oauth2": {
      "origin": "https://api.meethue.com/oauth2",
      "headers": {
        "Authorization": "Basic ${OAUTH_ID_SECRET_HASH}"
      }
    },
    "/bridge": {
      "origin": "https://api.meethue.com/bridge"
    }
  },
  "headers": {
    "/**": {
      "Access-Control-Allow-Origin": "http://hue-explorer.herokuapp.com"
    }
  }
}
